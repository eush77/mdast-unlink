{
  "name": "remark-unlink",
  "version": "2.1.1",
  "description": "remark plugin to remove all links, references, and definitions",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "plugin",
    "mdast",
    "markdown",
    "definitions",
    "filter",
    "images",
    "links",
    "plaintext",
    "references",
    "remove",
    "text"
  ],
  "repository": "remarkjs/remark-unlink",
  "bugs": "https://github.com/remarkjs/remark-unlink/issues",
  "author": "Eugene Sharygin <eush77@gmail.com>",
  "contributors": [
    "Eugene Sharygin <eush77@gmail.com>",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "mdast-squeeze-paragraphs": "^3.0.0",
    "unist-util-visit": "^1.4.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.0.0",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "format": "remark *.md -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s remarkUnlink -o remark-unlink.js",
    "build-mangle": "browserify . -s remarkUnlink -p tinyify -o remark-unlink.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
